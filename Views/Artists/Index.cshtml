@model IEnumerable<Assignment8.Controllers.ArtistBase>

@{
    ViewBag.Title = "Artist list";
}

<h2>Artist List</h2>

<p>
    @Html.ActionLink("Create new artist", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Artist photo
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BirthName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BirthOrStartDate)
        </th>
        
        <th>
            @Html.DisplayNameFor(model => model.Genre)
        </th>
       
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <img src="@Html.DisplayFor(modelItem => item.UrlArtist)" class="img-thumbnail" alt="The picture is not available" width="114" height="89">
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BirthName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BirthOrStartDate)
        </td>
       
        <td>
            @Html.DisplayFor(modelItem => item.Genre)
        </td>
        
        <td>
           @Html.ActionLink("Details", "Details", new { id=item.Id }) 
        </td>
    </tr>
}

</table>
